/* pages/newstation/newstation.wxss */
.staionstit{
  margin-top: 45rpx;
  margin-left: 40rpx;
}
.staionstit image{
  width: 20rpx;
  height: 20rpx;
  float: left;
  margin-top: 5rpx;
}
.staionstit text{
  font-size: 30rpx;
  color: #ff7f01;
  float: left;
  margin-left: 15rpx;
  line-height: 32rpx;
}
.staionstit::after{
  display: block;
  content: "";
  clear: both;
}
.positionbar{
  width: 702rpx;
  height: 68rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
  margin: 0 auto;
  margin-top: 52rpx;
  box-sizing: border-box;
  /* padding-top: 8rpx; */
  position: relative;
}
.positionbar input{
  font-size: 28rpx;
  color: #333;
  margin-left: 23rpx;
  width: 600rpx;
  height: 68rpx;
  line-height: 68rpx;
}
.mediabox{
  margin-top: 30rpx;
  margin-left: 23rpx;
}
.mediabox::after{
  display: block;
  content: "";
  clear: both;
}
.squareadd{
  width: 224rpx;
  height: 165rpx;
  float: left;
  margin-bottom: 16rpx;
}
.mediapic{
  width: 224rpx;
  height: 165rpx;
  border-radius: 6rpx;
}
.singpic{
  width: 224rpx;
  height: 165rpx;
  float: left;
  margin-right: 16rpx;
  
  margin-bottom: 16rpx;
  position: relative;
}
.mediabox .singpic:nth-of-type(3n){
  margin-right: 0;
}
.contarea{
  width: 702rpx;
  margin: 0 auto;
  margin-top: 108rpx;
  height: 200rpx;
}
.contarea textarea{
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  color: #333;
}
.orgbtn{
  width: 246rpx;
  height: 78rpx;
  position: relative;
  margin: 0 auto;
  margin-top: 70rpx;
  padding: 0;
  background: transparent;
}
.orgbtn::after{
  opacity: 0;
}
.orgbtn image{
  width: 100%;
  height: 100%;
}
.orgbtn text{
  position: absolute;
  width: 100%;
  height: 100%;
  line-height: 74rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  top: 0;
  left: 0;
}
.linkbox{
  position: absolute;
  width: 100%;
  min-height: 0rpx;
  background: #ededed;
  top:74rpx;
  left: 0;
  box-sizing: border-box;
  padding:0rpx 20rpx;
  z-index: 2000;
}
.linkbox .text{
  line-height: 60rpx;
  font-size: 28rpx;
  color: #666;
  white-space: nowrap;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
}
.mask{
  position: fixed;
  width: 100%;
  height: 100%;
  background: transparent;
  z-index: 10;
  top: 0;
  left: 0;
}
.delico{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: 8rpx;
  right: 8rpx;
}
.vedbox{
  width: 700rpx;
  height: 360rpx;
}
.vedbox video{
  width: 100%;
  height: 100%;
}
.deleteved{
  margin-top: 15rpx;
}
.deleteved::after{
  display: block;
  content: "";
  clear: both;
}
.deleteved image{
  float: left;
  width: 32rpx;
  height: 32rpx;
}
.deleteved text{
  float: left;
  color: #ff7f01;
  font-size: 28rpx;
  line-height: 32rpx;
}
.suggest{
  width: 100%;
  height: 60rpx;
  font-size: 26rpx;
  color: #ff7f01;
  text-align: center;
  line-height: 60rpx;
  margin-top: 20rpx;
}