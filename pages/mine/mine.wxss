}
.contbox .sing00 image{
  width: 37rpx;
  height: 37rpx;
  margin-top: 30rpx;
  margin-left: 4rpx;
}
.contbox .rig{
  width: 653rpx;
  float: right;
  height: 100rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e8e7e0;
  position: relative;
}
.contbox .rig text.tit{
  color: #1f1607;
  font-size: 30rpx;
  line-height: 98rpx;
}
.contbox .rig .num{
  position: absolute;
  top: 34rpx;
  left: 130rpx;
  background: #ff0505;
  color: #fff;
  font-size: 18rpx;
  text-align: center;
