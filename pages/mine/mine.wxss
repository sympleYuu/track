/* pages/mine/mine.wxss */
.minetop{
  width: 100%;
  height: 433rpx;
  border-bottom-left-radius: 370rpx 50rpx;
  border-bottom-right-radius: 370rpx 50rpx;
  background: url(https://track.huiur.com/images/minetop.png) no-repeat center center;
  background-size:cover; 
  box-sizing: border-box;
  padding-top: 98rpx;
}
.minetop .person{
  padding-left:52rpx;
  padding-top: 46rpx;
  float: left;
}
.minetop .person .photo > image{
  width: 138rpx;
  height: 138rpx;
  border-radius: 50%;
  background: #ddd;
  float: left;
}
.minetop .rig{
  float: left;
  margin-top: 25rpx;
  margin-left: 30rpx;
  width: 300rpx;
}
.minetop .rig text{
  font-size: 36rpx;
  color: #2f2f2f;
}
.minetop .person .gold{
  margin-top: 12rpx;
}
.minetop .person .gold > image{
  width: 26rpx;
  height: 26rpx;
  float: left;
}
.minetop .person .gold text{
  font-size: 24rpx;
  color: #fff;
  float: left;
  margin-left: 8rpx;
  line-height: 26rpx;
}
.minetop .person .photo{
  position: relative;
  width: 138rpx;
  height: 138rpx;
  float: left;
}
.minetop .person .photo .level{
  width: 38rpx;
  height: 38rpx;
  border-radius: 50%;
  background: #fff3dd;
  border: 2rpx solid #fff;
  font-size: 15rpx;
  position: absolute;
  color: #ffae1d;
  font-weight: bold;
  line-height: 34rpx;
  text-align: center;
  box-sizing: border-box;
  bottom: 0;
  right: 0;
}
.signin{
  float: right;
  margin-top: 94rpx;
  margin-right: 77rpx;
  width: 106rpx;
  height: 40rpx;
  background: #ff8308;
  border-radius: 20rpx;
  color: #fff;
  line-height: 40rpx;
  text-align: center;
  font-size: 28rpx;
}
.signed{
  background: #ddd;
  color: #fff;
  font-size: 26rpx;
}
.contbox{
  margin-top: 20rpx;
}
.contbox .sing{
  padding-left: 30rpx;
  height: 100rpx;
  
}
.contbox .sing image{
  width: 40rpx;
  float: left;
}
.contbox .sing01 image{
  width: 34rpx;
  height: 32rpx;
