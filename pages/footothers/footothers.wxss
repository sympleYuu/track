  padding-left: 45rpx;
  padding-bottom: 20rpx; 
  border-left: 4rpx solid #fbc800;
  position: relative;
  
}
.myfobox{
  width: 634rpx;
  box-shadow: 0rpx 3rpx 2rpx 3rpx rgba(0, 0, 0, .1);
  border-radius: 18rpx;
  margin-bottom: 45rpx;
  position: relative;
}
.mycoverimg{
  width: 100%;
  height: 358rpx;
  border-radius: 20rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}
.mycoverbox{
  position: relative;
  width: 634rpx;
  height: 358rpx;
  /* background: #000; */
}
.myfotit{
  width: 580rpx;
  font-size: 30rpx;
  color: #fbf7ec;
  line-height: 45rpx;
  padding-top: 20rpx;
  margin-left: 32rpx;
}
.myfodate{
  font-size: 24rpx;
  color: #fff;
  border-left:6rpx solid #fbc800;
  line-height: 25rpx;
  margin-top: 14rpx;
  margin-left: 36rpx;
  padding-left: 15rpx;
  box-sizing: border-box;
}
.myviewnum{
  position: absolute;
  bottom: 20rpx;
  left: 36rpx;
  color: #fff;
  font-size: 24rpx;
}
.myfoshare{
  width: 138rpx;
  height: 62rpx;
  position: absolute;
  bottom: -1rpx;
  right: 16rpx;
  border:1rpx solid transparent;
  padding:0;
  background: transparent;
  overflow: visible;
}
.myfoshare::after{
  opacity: 0;
}
.myloctit{
  width: 115rpx;
  height: 40rpx;
  font-size: 22rpx;
  line-height: 40rpx;
  text-align: center;
  color: #bc9603;
  background: #fbc800;
  border-radius: 18rpx;
  float: left;
  margin-right: 10rpx;
  margin-top: 12rpx; 
}
.mylocaltext{
  font-size: 28rpx;
  line-height: 50rpx;
  padding-top: 12rpx;
}
.mylocalbox{
  padding-left: 15rpx;
  box-sizing: border-box;
  min-height: 65rpx;
}
.startpoint{
  position: absolute;
  top: 0;
  left: -10rpx;
  width: 16rpx;
  height: 16rpx;
  background: #fbc800;
  border-radius: 50%;
}
.activepoint{
  position: absolute;
  width: 14rpx;
  height: 14rpx;
  left: -60rpx;
  top: 210rpx;
  background: #000;
  border-radius: 50%;
  border:8rpx solid #fbc800;
}
.myfoshareimg{
  width:138rpx;
  height:62rpx;
