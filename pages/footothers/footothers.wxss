.footmybox{
  padding-top: 50rpx;
  padding-left: 38rpx;
}
.myphoto{
  width: 120rpx;
  height: 120rpx;
  float: left;
  margin-left: 25rpx;
  border-radius: 50%;
}
.myusername{
  font-size: 40rpx;
  line-height: 120rpx;
  color: #000;
  margin-left: 40rpx;
  float: left;
}
.mysex{
  width: 45rpx;
  height: 30rpx;
  float: left;
  margin-left: 40rpx;
