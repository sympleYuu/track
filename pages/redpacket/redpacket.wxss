/* pages/redpacket/redpacket.wxss */
page{
  background: #f5f5f5;
}
.withdraw{
  width: 708rpx;
  height: 180rpx;
  margin: 0 auto;
  background: url(https://track.huiur.com/images/redpbg.png)  no-repeat center center;
  background-size: cover;
  border-radius: 15rpx;
  margin-top: 20rpx;
}
.cash{
  float: left;
  /* margin-top: 65rpx; */
  margin-left: 54rpx;
}
.cash .lef{
  float: left;
  color: #fef3e9;
  font-size: 32rpx;
  margin-top: 65rpx;
}
.cash .rig{
  float: left;
  font-size: 28rpx;
  color: #fff;
  margin-top: 51rpx;
}
.cash .rig text{
  font-size: 46rpx;
  display: inline;
}
.withdraw .btn{ 
  float: right;
  width: 130rpx;
  height: 44rpx;
  line-height: 40rpx;
  color: #fff;
  text-align: center;
  border:2rpx solid #fff;
  border-radius: 12rpx;
  font-size: 28rpx;
  margin-top: 62rpx;
  margin-right: 40rpx;
  box-sizing: border-box;
}
.withdraw .btned{ 
  float: right;
  width: 130rpx;
  height: 44rpx;
  line-height: 40rpx;
  color: #999;
  text-align: center;
  border:2rpx solid #999;
  border-radius: 12rpx;
  font-size: 28rpx;
  margin-top: 62rpx;
  margin-right: 40rpx;
  box-sizing: border-box;
}
.cashtip{
  float: right;
  color: #ff8e22;
  font-size: 24rpx;
  padding-right: 44rpx;
  margin-top: 30rpx;
}
.redpacbox{
  clear: both;
  padding-top: 38rpx;
}
.redpacbox .sing{
  width: 700rpx;
  height: 118rpx;
  background: #fff;
  margin: 0 auto;
  border-radius: 15rpx;
  margin-bottom: 16rpx;
}
.redpacbox .sing .ico{
  width: 108rpx;
  height: 83rpx;
  float: left;
  margin-left: 24rpx;
  margin-top: 18rpx;
