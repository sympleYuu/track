/* pages/makelist/makelist.wxss */
page{
  background: #f0efed;
}
page::before{
  background: #fc9637;
  width: 100%;
  height: 300rpx;
  content: "";
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
}
.topbox{
  padding: 0 24rpx;
  z-index: 200;
  position: relative;
}
.topbox input{
  font-size: 34rpx;
  color: #fff;
  padding-top: 20rpx;
}
.topbox image{
  width: 700rpx;
  margin: 0 auto;
  background: #ffdcbd;
  height: 394rpx;
  border-radius: 11rpx;
  margin-top: 18rpx;
}
.conbox{
  width: 100%;
  min-height: 80vh;
  background: #f0efed;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
  position: relative;
  z-index: 10;
  box-sizing: border-box;
  padding-top: 30rpx;
  padding-bottom: 50rpx;
}
.singbox{
  width: 700rpx;
  min-height: 300rpx;
  background: #fff;
  border-radius: 12rpx;
  margin: 0 auto;
  padding-bottom: 20rpx;
  margin-bottom: 24rpx;
}
.singbox .top{
  width: 100%;
  height: 62rpx;
  background: #f5bf8a;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
  position: relative;
}
.singbox .top .sta{
  float: left;
  height: 30rpx;
  background: #fef9f3;
  border-radius: 10rpx;
  padding: 0 13rpx;
  font-size: 22rpx;
  color: #c98748;
  margin-top: 16rpx;
  margin-left: 24rpx;
}
.singbox .top .location{
  float: left;
  color: #fff;
  font-size: 32rpx;
  line-height: 62rpx;
  margin-left: 17rpx;
}
.picarr{
  padding-left: 23rpx;
  margin-top: 30rpx;
}
.picarr image{
  width: 204rpx;
  height: 144rpx;
  float: left;
  background: #e3e3e3;
  border-radius: 8rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.picarr::after{
  display: block;
  content: "";
  clear: both;
}
.conbox .text{
  color:#140f01;
  font-size: 30rpx;
  width: 655rpx;
  margin: 0 auto;
  min-height: 85rpx;
}
.addstabtn{
  width: 700rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 11rpx;
  margin: 0 auto;
  margin-top: 24rpx;
  color: #ff7f01;
  text-align: center;
  font-size: 30rpx;
  line-height: 80rpx;
}
.orgbtn{
  width: 246rpx;
  height: 78rpx;
  position: relative;
  margin: 0 auto;
  margin-top: 100rpx;
  /* margin-bottom: 50rpx; */
}
.orgbtn image{
  width: 100%;
  height: 100%;
}
.orgbtn text{
  position: absolute;
  width: 100%;
  height: 100%;
  line-height: 74rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  top: 0;
  left: 0;
}
.deleico{
  width: 21rpx;
  height: 21rpx;
  position: absolute;
  right: 24rpx;
  top: 21rpx;
}
.vedbox{
  width: 654rpx;
  height: 280rpx;
  position: relative;
  margin: 0 auto;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}
.vedbox image.cover{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.vedbox image.playbtn{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 50%;
  margin-top: -30rpx;
  left: 50%;
  margin-left: -30rpx;
}
.topbox image.changecover{
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  bottom: 20rpx;
  right: 46rpx;
  background: transparent;
}
.suggest{
  width: 100%;
  height: 60rpx;
  font-size: 26rpx;
  color: #ff7f01;
  text-align: center;
  line-height: 60rpx;
  margin-top: 20rpx;
}
.savetips{
  position: fixed;
  bottom:100rpx;
  width: 640rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #dbdbdb;
  font-size: 28rpx;
  color: #666;
  border-radius: 15rpx;
  text-align: center;
  left: 50%;
  margin-left: -320rpx;
  z-index: 333333;
}
.percentbar{
  width: 268rpx;
  margin: 0 auto;
  margin-top: 20rpx;
}
.percentbar .barbox{
  width: 268rpx;
  height: 24rpx;
  background: #d0d0d0;
  border-radius: 12rpx;
  margin-top: 6rpx;
  box-sizing: border-box;
  padding-top: 5rpx;
  padding-left: 4rpx;
}
.percentbar .tit{
  font-size: 18rpx;
  color: #868686;
  text-align: center;
}
.orgbar{
  width: 160rpx;
  height: 14rpx;
  border-radius: 7rpx;
  background: #fe9f49;
}