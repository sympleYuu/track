  box-shadow: 0 4rpx 15rpx rgba(174,156,136,.48);
  border-radius: 8rpx;
}
.vlistbox{
  margin-top: 32rpx;
}
.vidplayer{
  width: 100%;
  height: 386rpx;
}
.vl-textcon::after{
  display: block;
  content: "";
  width: 100%;
  height: 20rpx;
  background: #f7f7f7;
  position: absolute;
  bottom: 0;
  left: 0;
}
.vl-vdtitle{
  display: block;
  font-size: 42rpx;
  color: #fff;
  width: 500rpx;
  /* margin:0 auto; */
  text-align: left;
  /* padding-top: 28rpx; */
  /* float: left; */
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  position: absolute;
  top: 20rpx;
  left: 24rpx;
  z-index: 30;
  letter-spacing: 3rpx;
}
.vl-thumpimg{
  width:30rpx;
  height: 31rpx;
  float: left;
  padding-right: 15rpx;
}
.vl-thumpimg.thumph{
  width: 34rpx;
  height: 35rpx;
}
.vl-thumpnum{
  font-size: 28rpx;
  color: #999;
  line-height: 35rpx;
  float:left;
}
.vl-oper{
  float: right;
  padding-top: 35rpx;
  margin-top: 40rpx;
}
.vl-oper::after{
  display: block;
  content: "";
  clear: both;
}
.vl-thump{
  float: left;
  margin-right: 32rpx;
  position: relative;
  height: 35rpx;
}
.vl-thump::after{
  display: block;
  content: "";
  clear: both;
}
.vl-commimg{
  width:39rpx;
  height: 29rpx;
  float: left;
  padding-right: 15rpx;
  margin-top: 3rpx;
}
