.vl-person{
  position: relative;
}
.vl-person{
  width: 100%;
  height: 134rpx;
}
.vl-porbox{
  width: 85rpx;
  height: 85rpx;
  overflow: hidden;
  padding:30rpx 28rpx 0 30rpx;
  float: left;
}
.vl-portrait{
  width: 85rpx;
  height: 85rpx;  
  border-radius: 50%; 
}
.vl-username{
  /* float: left; */
  font-size: 32rpx;
  color: #000;
  line-height: 40rpx;
  display: block;
