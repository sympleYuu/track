  font-size: 28rpx;
  color: #999;
  line-height: 35rpx;
  float:left;
}
.vl-comm{
  float: left;
  margin-right: 30rpx;
  position: relative;
  height: 35rpx;
}
.vl-share{
  float:left;
  position: relative;
  margin:0;
  padding: 0;
  background-color: transparent;
  padding-right: 50rpx;
  border:0px solid rgba(0, 0, 0, 0);
  margin-top: 3rpx;
}
.vl-share::after{
  display: none;
}
.vl-shareimg{
  width: 28rpx;
  height: 28rpx;
  display: block;
}
.vl-textcon::after{
  display: block;
  content: "";
  clear: both;
}
