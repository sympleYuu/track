/* 模板1 */
.main1{
  background: #1e1b33;
}
.replybox1{
  padding:38rpx 38rpx 38rpx 44rpx;
  border-bottom: 2rpx solid #2b2744;
}
.replybox1::after{
  display: block;
  content: "";
  clear: both;
}
.personbox1::after{
  display: block;
  content: "";
  clear: both;
}
.pertextbox1{
  float: left;
  margin-left: 30rpx;
}
.pername1{
  float: left;
  font-size: 36rpx;
  color: #ddd;
}
.perlevel1{
  float: left;
  width: 60rpx;
  height: 28rpx;
  background: #fbc800;
  line-height: 28rpx;
  color: #0a0a0a;
  font-size: 22rpx;
  border-radius: 4rpx;
  text-align: center;
  position: relative;
}
/* .perlevel::before{
  position: absolute;
  display: block;
  content: "";
  
  top: 0;
  left: 0;
  z-index: -1;
} */
.perlevelbox1{
  float: left;
  width: 74rpx;
  height: 42rpx;
  line-height: 34rpx;
  color: #0a0a0a;
  font-size: 22rpx;
  background: #1e1b33;
  border: 1rpx solid #666;
  border-radius: 4rpx;
  text-align: center;
  position: relative;
  padding-top: 6rpx;
  padding-left: 6rpx;
  box-sizing: border-box;
  margin-left: 20rpx;
  margin-top: 4rpx;
}
.perdate1{
  color: #666;
  font-size: 24rpx;
  clear: both;
  margin-top: 3rpx;
}
.rebox1{
  margin-top: 35rpx;
}
.refirtext1{
  color: #c0c0c0;
  font-size: 32rpx;
  width: 672rpx;
}
.secrebox1{
  width: 672rpx;
  padding:25rpx 30rpx;
  background: #2b2744;
  box-sizing: border-box;
  margin-top: 25rpx;
}
.replybott1{
  width: 100%;
  height: 126rpx;
  background: #1e1b33;
  box-shadow: 0rpx 0rpx 20rpx rgba(101, 99,99, .3);
  position: fixed;
  bottom: 0;
  transform: translateZ(0);
  box-sizing: border-box;
  padding-top: 20rpx;
}
.replyinpbox1{
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(255,255,255,.9);
  top: 0;
  left: 0;
  z-index: 500;
  box-sizing: border-box;
  padding-top: 20rpx;
  padding-left: 20rpx;
  overflow: hidden;
}
.replyarea1{
  width: 590rpx;
  height: 200rpx;
  background: #fefefe;
  border: 1rpx solid #ebebeb;
  box-sizing: border-box;
  padding:10rpx 10rpx;
  font-size: 30rpx;
  color: #333;
  float: left;
  position: fixed;
  top: 20rpx;
  left: 20rpx;
}
.holder1{
  font-size: 30rpx;
  color: #c0c0c0;
}
.replybtn1{
  font-size: 32rpx;
  color: #0f0f1a;
  display: block;
  background: transparent;
  padding-top: 54rpx;
  padding-bottom: 30rpx;
  position: fixed;
  top: 20rpx;
  right: 12rpx;
}
.replybtn1::after{
  display: none;
}
.cite1{
  font-size: 24rpx;
  color: #666666;
  line-height: 30rpx;
}
.citetext1{
  font-size: 24rpx;
  color: #c0c0c0;
  line-height: 42rpx;
  padding-top: 10rpx;
}
.inpfoot1{
  width: 710rpx;
  height: 86rpx;
  background: #2b2744;
  line-height: 86rpx;
  font-size: 32rpx;
  color: #c0c0c0;
  padding-left: 40rpx;
  box-sizing: border-box;
  margin:0 auto;
}
.replymask1{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5)
}

